
<p> This is the list of all lands</p>

<%= form_tag lands_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a land"
  %>
<% end %>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>


<a href="lands/new" class="btn-treehouse">Add a new piscine</a>

<br>


<div class="container">
  <div class="main-container">
    <div class="card-container">
      <div class="row">
        <% @lands.each do |land| %>
        <div class="col-xs-12 col-sm-6">
          <% if land.photo_url %>
          <div class="card">
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path land.photo %>');">
              <div class="card-category">Popular</div>
              <div class="card-description"><h2><%= link_to land.title, land_path(land) %></h2></div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            </div>
            <div class="card-footer">
              <p><%= land.description %> </p>
              <p><%= land.price %>€/night</p>
            </div>
            <!-- <a class="card-link" href="#" ></a> -->
          </div>
          <% else %>
          <div class="card">
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
              <div class="card-category">Popular</div>
              <div class="card-description"><h2><%= link_to land.title, land_path(land) %></h2></div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            </div>
            <div class="card-footer">
              <p><%= land.description %> </p>
              <p><%= land.price %>€/night</p>
            </div>
            <!-- <a class="card-link" href="#" ></a> -->
          </div>
          <% end %>

        </div>
        <% end %>
      </div>
    </div>
    <div class="map-container">
      <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
  </div>
</div>
</div>
