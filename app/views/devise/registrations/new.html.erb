<div class="container">
<div class="col-xs-12 col-sm-offset-3 col-sm-6">
  <h2>Enregristez-vous </h2>
  <h6>(en quelques clics)</h6>

<br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html:{class:'my_input'}, placeholder: 'pierre.paul.jaques@gmail.com' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html:{class:'my_input'}, placeholder: 'azerty' %>
    <%= f.input :first_name, required: false, input_html:{class:'my_input'}, placeholder: 'Pierre-Paul' %>
    <%= f.input :last_name, required: false, input_html:{class:'my_input'}, placeholder: 'Jacques' %>
    <%= f.input :address, required: false, input_html:{class:'my_input'}, placeholder: '50 rue de la pine Marseille' %>
    <%= f.input :phone_number, required: false, input_html:{class:'my_input'} %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :password_confirmation, required: true, input_html:{class:'my_input'} %>
  </div>

  <div class="form-actions">
    <%= f.button :button, "Sign up", type: :submit, class: :'btn btn-treehouse btn-sm' %>
  </div>
  <% end %>


  <%= render "devise/shared/links" %></div>
   </div>

