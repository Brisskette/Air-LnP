<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 ">
      <%= simple_form_for(@land) do |f| %>

      <%= f.input :title, placeholder: 'Choose a title', input_html:{class:'my_input'}%>
      <%= f.input :description, placeholder: 'Add a description', input_html:{class:'my_input'}%>
      <%= f.input :address, placeholder: 'Address', input_html:{class:'my_input'}%>
      <%= f.input :price, placeholder: 'Price in â‚¬', input_html:{class:'my_input'}%>
      <%= f.input :surface, placeholder: 'Surface en m2', input_html:{class:'my_input'}%>
      <%= f.input :photo, input_html:{class:'my_input'}%>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.button :button, "Share your land", type: :submit, class: :'btn btn-treehouse btn-sm' %>
      <% end %>

    </div>
  </div>
</div>


